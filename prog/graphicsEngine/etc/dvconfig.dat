DVDRINITIALHEAPSIZE     =    50 # drawing (dr) initial heap size
DVDYINITIALHEAPSIZE     =    50 # dynamic control (dy) initial heap size
DVEDGEINITIALHEAPSIZE   =    50 # edge (ed) initial heap size
DVELINITIALHEAPSIZE     =    50 # ellipse (el) initial heap size
DVFEINITIALHEAPSIZE     =    50 # fe initial heap size
DVICONINITIALHEAPSIZE   =    50 # icon (ic) initial heap size
DVIMAGEINITIALHEAPSIZE  =    50 # image (im) initial heap size
DVININITIALHEAPSIZE     =    50 # input (in) initial heap size
DVITINITIALHEAPSIZE     =    50 # input technique (it) initial heap size
DVLNINITIALHEAPSIZE     =   200 # line (ln) initial heap size
DVLOINITIALHEAPSIZE     =     5 # location (lo) initial heap size
DVMCINITIALHEAPSIZE     =    50 # ms control (mc) initial heap size
